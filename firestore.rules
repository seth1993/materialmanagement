rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Materials collection - users can only access their own materials
    match /materials/{materialId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Notifications collection - users can only access their own notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Requisitions collection - users can access their own requisitions and read others for approval
    match /requisitions/{requisitionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null; // Allow updates for approval workflow
    }
    
    // Shipments collection - users can access their own shipments and read others for management
    match /shipments/{shipmentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null; // Allow updates for status changes and issue reporting
    }
  }
}
